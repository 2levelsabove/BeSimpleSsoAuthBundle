<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="be_simple_sso_auth.http_client.class">Buzz\Browser</parameter>
        <parameter key="be_simple_sso_auth.sso_factory.class">BeSimple\SsoAuthBundle\Sso\SsoFactory</parameter>
        <parameter key="be_simple_sso_auth.sso_provider.cas.class">BeSimple\SsoAuthBundle\Sso\Cas\CasProvider</parameter>
    </parameters>

    <services>
        <service id="be_simple_sso_auth.http_client" class="%be_simple_sso_auth.http_client.class%" />

        <service id="be_simple_sso_auth.sso_factory" class="%be_simple_sso_auth.sso_factory.class%">
            <argument type="service" id="service_container" />
        </service>

        <service id="be_simple_sso_auth.sso_provider.cas" class="%be_simple_sso_auth.sso_provider.cas.class%">
            <argument type="service" id="be_simple_sso_auth.http_client" />
            <tag name="be_simple_sso_auth.sso_provider" />
        </service>
    </services>
</container>